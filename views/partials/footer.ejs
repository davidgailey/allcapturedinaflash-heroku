<script>

    pannellum.launch = function(panorama){
        pannellum.viewer('panorama', {
            "type": "equirectangular",
            "panorama": panorama,
            "autoRotate": -0.25,
            "autoLoad": true,
            "showFullscreenCtrl": true
        });
    };
    
    $('[data-panorama]')
        .on('shown.bs.modal',function(ev){
            pannellum.launch($(ev.target).attr('data-panorama'));
        });

</script>
